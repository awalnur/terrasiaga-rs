# Test Environment Configuration for Terra Siaga
# Copy this to .env.test for running tests

# Test Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/terrasiaga_test
DATABASE_MAX_CONNECTIONS=5
DATABASE_LOGGING=false

# Test Redis Configuration (separate DB for tests)
REDIS_URL=redis://localhost:6379/1

# Test Authentication
JWT_SECRET=test_secret_key_minimum_32_characters_long_for_testing
JWT_EXPIRY=3600

# Test Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8081
ENVIRONMENT=test

# Disable external services for testing
WHATSAPP_API_KEY=test_whatsapp_key
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=1025
GOOGLE_MAPS_API_KEY=test_google_maps_key
WEATHER_API_KEY=test_weather_key

# Test Logging
RUST_LOG=debug
RUST_BACKTRACE=1
